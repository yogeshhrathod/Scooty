{
  "name": "scooty",
  "private": true,
  "version": "1.0.1",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yogeshhrathod/Scooty.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev -- --port 5173 --strictPort\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron main.js\"",
    "electron:build": "npm run build && electron-builder",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android"
  },
  "description": "A cross-platform media player",
  "author": "Yogesh (Sparkvault)",
  "build": {
    "appId": "com.sparkvault.scooty",
    "productName": "Scooty",
    "copyright": "Copyright Â© 2025 Sparkvault",
    "icon": "resources/icon.png",
    "directories": {
      "output": "dist_electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yogeshhrathod",
        "repo": "Scooty"
      }
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.entertainment",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "electron/**/*"
    ],
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}.${ext}"
    }
  },
  "dependencies": {
    "@aptabase/react": "^0.4.0",
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@heroui/react": "^2.8.5",
    "@lottiefiles/dotlottie-react": "^0.17.10",
    "adm-zip": "^0.5.16",
    "airplay-protocol": "^2.0.2",
    "axios": "^1.13.2",
    "basic-ftp": "^5.0.5",
    "bonjour-service": "^1.3.0",
    "chromecast-api": "^0.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.23.26",
    "fuse.js": "^7.1.0",
    "idb-keyval": "^6.2.2",
    "ip": "^2.0.1",
    "lucide-react": "^0.561.0",
    "mime-types": "^3.0.2",
    "node-fetch": "^2.7.0",
    "portfinder": "^1.0.38",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-player": "^3.4.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
